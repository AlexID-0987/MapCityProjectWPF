<Window x:Class="MapCityProject.Windows.WindowDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapCityProject.Windows"
        mc:Ignorable="d"
        Title="WindowDetails" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Details Window" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Button Content="Close" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="CloseButton_Click"/>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="New">
                <MenuItem Header="Open City" >
                    <MenuItem Header="New City" Click="AddNewCity"></MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem Header="Exit" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" ></MenuItem>
            <MenuItem Header="View" ></MenuItem>
            
        </Menu>
        <DataGrid x:Name="CityList"
                  AutoGenerateColumns="True"
                  FontSize="16"
                  Margin="10,40,10,60"
                  MouseDoubleClick="CityGrid_MouseDoubleClick"
                  >
            
        </DataGrid>

    </Grid>
</Window>
