<Window x:Class="MapCityProject.Windows.EditCity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapCityProject.Windows"
        mc:Ignorable="d"
        Title="EditCity" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
        <TextBlock Text="City Name:"/>
        <TextBox x:Name="CityNameTextBox" Grid.Row="0" Margin="100,0,0,0" />
        
        <TextBlock Text="City Coordinate X:" Grid.Row="1"/>
        <TextBox x:Name="CityNameCoordinateX" Grid.Row="1" Margin="100,0,0,0" />
        
        <TextBlock Text="City Coordinate Y:" Grid.Row="2"/>
        <TextBox x:Name="CityNameCoordinateY" Grid.Row="2" Margin="100,0,0,0" />
        <Button Content="Save" x:Name="SaveCity" Grid.Row="4" Height="35" Width="100" VerticalAlignment="Bottom" Margin="0,10,0,0" Click="SaveButton_Click"/>
        <Button Content="Delete" x:Name="DeleteCity"  Grid.Row="4" Height="35" Width="100" VerticalAlignment="Bottom" Margin="250,10,0,0" Foreground="White" FontSize="20" FontFamily="Bodoni MT" Background="Red" Click="Delete_Click"/>
        
    </Grid>
</Window>
